<launch>
  <arg name="vocab_path" value="$(find orb_slam2)../../../Vocabulary/ORBvoc.bin" />
  <arg name="config_path" value="$(find orb_slam2)../../../cam_configs/mono_rs_d455.yaml" />
  <arg name="save_map" value="1" /> <!-- the map is saved at /home/jy/.ros/ -->

  
  <node name="orb_slam2_mono" pkg="orb_slam2" type="mono" args="$(arg vocab_path) $(arg config_path) $(arg save_map)" output="screen">
    <remap from="camera/image_raw" to="camera/color/image_raw" />

  </node>

  <!-- start up realsense d455 -->
  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch" />


</launch>