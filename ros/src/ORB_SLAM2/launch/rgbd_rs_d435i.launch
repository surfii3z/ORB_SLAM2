<launch>
  <arg name="vocab_path" value="$(find orb_slam2)../../../Vocabulary/ORBvoc.bin" />
  <arg name="config_path" value="$(find orb_slam2)../../../cam_configs/rgbd_rs_d435i.yaml" />
  <arg name="save_map" value="0" />

  
  <node name="orb_slam2_rgbd" pkg="orb_slam2" type="rgbd" args="$(arg vocab_path) $(arg config_path) $(arg save_map)" output="screen">
    <remap from="camera/rgb/image_raw" to="camera/color/image_raw" />
    <remap from="camera/registered_depth/image_raw" to="camera/aligned_depth_to_color/image_raw" />

  </node>

  <!-- start up realsense d435i -->
  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch" />


</launch>